					location.reload();
				}
			}
			
			
			}else if(drag_rIndex == 1 && drag_cIndex == 5 && drop_rIndex == 3 && drop_cIndex == 7 || drag_rIndex == 3 && drag_cIndex == 7 && drop_rIndex == 1 && drop_cIndex == 5 || drag_rIndex == 1 && drag_cIndex == 7 && drop_rIndex == 3 && drop_cIndex == 5 || drag_rIndex == 3 && drag_cIndex == 5 && drop_rIndex == 1 && drop_cIndex == 7){
