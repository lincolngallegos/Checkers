      <script type = "text/javascript" language="javascript">
	  
	  
	 $(document).ready(function() {
            $('#play').click(function() {
			
				$("#play").hide("slow");
				
				$("#menu").hide("slow");
				
				$("#insertName").show("slow"); /*,function(){alert("Prepare Yourself");
				});*/
				
				//$("#quit").show("slow");
				
			});
			
			$('#submit').click(function() {
			
				var player1 = document.getElementById("p1").value;
				var player2 = document.getElementById("p2").value;
			
				$("#insertName").hide("slow");
				
				//$("#menu").hide("slow");
				
				$("#displayName1").text(player1+" you are Red");
				$("#displayName2").text(player2+" you are Blue");

				

				
				$("#board").show("slow"); /*,function(){alert("Prepare Yourself");
				});*/
				
				$("#quit").show("slow");
				
			});
				
			
			
			$("#quit").click(function(){
				$("#board").hide("slow");/*, function(){alert("Quitter!");});*/
				$("#quit").hide("slow");
				$("#sure").show("slow");
				$("#displayName").hide("slow");
				//$("#play").show("slow");
				
				//$("#menu").show("slow");
				
				//quit();
				//location.reload();
			});
			
			$("#yes").click(function(){
				$("#box").hide("slow", function(){alert("Quitter!");
				});
				$("#quit").hide("slow");
				
				$("#play").show("slow");
				
				$("#menu").show("slow");
				
				location.reload();
			});
			
			
			$("#no").click(function(){
			
				$("#sure").hide("slow");
				$("#displayName").hide("slow");
				$("#board").show("slow");
				$("#quit").show("slow");
				
			});
			
			
			
		/*	$("#number1").one('click', function() {
				Record();
			});*/


			
			
			
		});

var drag_rIndex = " ";
var drag_cIndex = " ";
var drop_rIndex = " ";
var drop_cIndex = " ";
//var ev = "1";
var redCnt = 0;
var blueCnt = 0;

	  function drag(ev)
{
	//console.log("1" + drag_Indexes.drag_rIndex + " | " + drag_Indexes.drag_cIndex + " | " + drop_Indexes.drop_rIndex + " | " + drop_Indexes.drop_cIndex);
	//console.log("1 " + drag_rIndex + " | " + drag_cIndex + " | " + drop_rIndex + " | " + drop_cIndex);

		ev.dataTransfer.setData("Text",ev.target.id);
		//ev.originalEvent.dataTransfer("Text",ev.target.id);
		//ev.dataTransfer.effectAllowed("Text",ev.target.id);

		//Row Index
		drag_rIndex = ev.target.parentNode.parentNode.rowIndex+1;
	    console.log("Row index is: " + drag_rIndex);
		
		//Column Index
		drag_cIndex = ev.target.parentNode.cellIndex+1;
		console.log("Cell index is: " + drag_cIndex);
}
	  


function drop(ev)
{
    var id = ev.dataTransfer.getData("Text");
    if (!$(ev.currentTarget).find("img")[0]){
		ev.target.appendChild(document.getElementById(id));
			
			console.log("dropped");

			//Row Index
		drop_rIndex = ev.target.parentNode.rowIndex+1;
	    console.log("Row index is: " + drop_rIndex);
		
		//Column Index
		drop_cIndex = ev.target.cellIndex+1;
		console.log("Cell index is: " + drop_cIndex);
			console.log("indexes: " + drag_rIndex + " | " + drag_cIndex + " | " + drop_rIndex + " | " + drop_cIndex);
			
			if(drag_rIndex == 1 && drag_cIndex == 3 && drop_rIndex == 3 && drop_cIndex == 1 || drag_rIndex == 3 && drag_cIndex == 1 && drop_rIndex == 1 && drop_cIndex == 3 || drag_rIndex == 1 && drag_cIndex == 1 && drop_rIndex == 3 && drop_cIndex == 3 || drag_rIndex == 3 && drag_cIndex == 3 && drop_rIndex == 1 && drop_cIndex == 1){
			var pos10 = document.getElementById("pos10");
			var x = pos10.firstElementChild.alt;
			
			while (pos10.firstChild) {
				pos10.removeChild(pos10.firstChild);			
			}
			alert(x + " removed!");
			if(x=="Red"){
				console.log("red: "+redCnt);
				redCnt++;
				console.log("red: "+redCnt);
				if(redCnt == 12){
					alert("Blue Wins!");
					location.reload();
				}
			}else if(x=="Blue"){
				console.log("Blue: "+blueCnt);
				blueCnt++;
				console.log("Blue: "+blueCnt);
				if(blueCnt == 12){
					alert("Red Wins!");
					location.reload();
				}
			}
			
			

			}else if(drag_rIndex == 1 && drag_cIndex == 3 && drop_rIndex == 3 && drop_cIndex == 5 || drag_rIndex == 3 && drag_cIndex == 5 && drop_rIndex == 1 && drop_cIndex == 3 || drag_rIndex == 1 && drag_cIndex == 5 && drop_rIndex == 3 && drop_cIndex == 3 || drag_rIndex == 3 && drag_cIndex == 3 && drop_rIndex == 1 && drop_cIndex == 5){
			var pos12 = document.getElementById("pos12");
